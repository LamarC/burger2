<main>
    <div class="container">
        <hr class="style">
        <h1 id="mainHeading">The Krusty Krab</h1>
        <hr class="style">
        <br>

        <div id="option">
            <h2>Burgers:</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-warning" type="submit">Pick Me!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div id="devoured">
            <h2>Burgers that <br>been devoured: </h2>

            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</main>

<div id="add">
    <h2>Add a Burger: </h2>
    <hr class="style">
    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>
